{
  "name": "tree-sitter-sml",
  "version": "0.0.2",
  "description": "Standard ML Grammar for Tree-sitter",
  "main": "index.js",
  "types": "bindings/node",
  "scripts": {
    "compile": "tree-sitter generate",
    "pretest": "npm run compile",
    "test": "tree-sitter test",
    "gen-wasm": "tree-sitter build-wasm",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "release": "standard-version && git push --follow-tags && npm publish"
  },
  "author": "Di Wang",
  "license": "MIT",
  "repository": "https://github.com/Whitomtit/tree-sitter-sml",
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prebuildify": "^6.0.0",
    "standard-version": "^9.5.0",
    "tree-sitter-cli": "^0.15.14"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "tree-sitter": [
    {
      "scope": "source.sml",
      "injection-regex": "^sml$"
    }
  ]
}
